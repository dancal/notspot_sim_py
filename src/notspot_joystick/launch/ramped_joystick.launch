<launch>

    <node pkg="notspot_controller" type="robot_controller_servo.py" name="ROBOT_CONTROLLER" output="screen"/>

    <!-- Joystick node -->
    <node respawn="true" pkg="joy" type="joy_node" name="JOYSTICK">
        <param name="joy_node/dev" value="/dev/input/js0"/>
        <param name="dev" type="string" value="/dev/input/js0" />
    </node>

    <!-- Ramped Joystick node -->
    <node pkg="notspot_joystick" type="ramped_joystick.py" name="Joystick_ramped" output="screen"/>

</launch>
